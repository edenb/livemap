.navbar.navbar-default.navbar-fixed-top(role='navigation')
  container-fluid
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/main') #{wclient.name}
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        li.dropdown
          a.dropdown-toggle(href='#', data-toggle='dropdown')
            | #{user.fullname}
            span.caret
          ul.dropdown-menu(role='menu')
            li
              if user.role=='admin'
                a(href='/changedetails') Accounts
              else
                a(href='/changedetails') Account
            li
              if user.role=='admin'
                a(href='/changedevices') Devices
              else
                a(href='/changedevices') My Devices
            li
              if user.role=='admin' || user.role=='manager'
                a(href='/changepassword') Change password
        li
          a(data-toggle='modal' href='#about-modal') About
      ul.nav.navbar-nav.navbar-right
        li
          a(href='./signout') Logout
        li
          a
